<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="#0765B9"
    tools:context="iip.hr.recent.view.NfcActivity">

     <ImageView
         android:id="@+id/nfc_inactive"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@drawable/nfc_inactive" />

     <ImageView
         android:id="@+id/nfc_active"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@drawable/nfc_active"
         android:visibility="gone" />

</RelativeLayout>
