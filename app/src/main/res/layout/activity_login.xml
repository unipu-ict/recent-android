<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0765B9"
    android:padding="@dimen/activity_padding"
    tools:context=".view.LoginActivity">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECENT"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/app_name"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/et_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_username_hint"
        android:singleLine="true"
        android:layout_above="@+id/et_password"
        android:background="@drawable/login_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_password_hint"
        android:singleLine="true"
        android:layout_above="@+id/b_login"
        android:inputType="textPassword"
        android:background="@drawable/login_edittext"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignRight="@+id/et_username" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/b_login"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:background="@drawable/login_button"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignRight="@+id/et_username" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/error_border"
        android:text="@string/tv_error"
        android:layout_below="@+id/b_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

</RelativeLayout>
