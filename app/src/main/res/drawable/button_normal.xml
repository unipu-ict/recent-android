    android:insetBottom="5dp"
    android:insetLeft="5dp"
    android:insetRight="5dp">

    <shape android:shape="rectangle">

        <solid android:color="#064781" />

        <stroke
            android:width="2dp"
            android:color="#fff"/>

        <padding
            android:left="16dp"
            android:top="5dp"
            android:right="16dp"
            android:bottom="5dp" />

    </shape>
</inset>
